---

<section class="flex-1">
    <div class="mx-auto max-w-2xl lg:max-w-7xl">
        <div class="flex flex-col">
            <form name="book-a-musician" netlify method="POST" class="mt-3 flex flex-col gap-y-6">
                <!-- Full name input -->
                <div>
                    <label for="full-name" class="sr-only">Full name</label>
                    <input
                        type="text"
                        name="full-name"
                        required
                        id="full-name"
                        autocomplete="name"
                        class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
                        placeholder="Full name"
                    />
                </div>

                <!-- Email input -->
                <div>
                    <label for="email" class="sr-only">Email</label>
                    <input
                        type="email"
                        name="email"
                        required
                        id="email"
                        autocomplete="email"
                        class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
                        placeholder="Email"
                    />
                </div>

                <!-- Phone number input -->
                <div>
                    <label for="phone" class="sr-only">Phone Number</label>
                    <input
                        type="tel"
                        name="phone"
                        required
                        id="phone"
                        autocomplete="tel"
                        class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
                        placeholder="Phone Number"
                    />
                </div>

                <!-- Instruments Select Dropdown -->
                <div>
                    <label for="instruments" class="sr-only">Instruments</label>
                    <select
                        name="instruments"
                        id="instruments"
                        class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
                    >
                        <option value="" selected disabled>Please select desired instruments</option
                        >
                        <option value="">Solo violin</option>
                        <option value="">Violin duo</option>
                        <option value="">Violin and piano</option>
                        <option value="">Violin with backing track</option>
                        <option value="">Other (please specify in message)</option>
                    </select>
                </div>

                <!-- Event Type Select Dropdown -->
                <div>
                    <label for="event-type" class="sr-only">Event Type</label>
                    <select
                        name="event-type"
                        id="event-type"
                        class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
                    >
                        <option value="" selected disabled>Please select event type</option>
                        <option value="">Wedding</option>
                        <option value="">Concert / gig</option>
                        <option value="">Corporate event</option>
                        <option value="">Other (please specify in message)</option>
                    </select>
                </div>

                <!-- Message textarea -->
                <div>
                    <label for="message" class="sr-only">Message</label>
                    <textarea
                        name="message"
                        id="message"
                        rows="3"
                        required
                        class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
                        placeholder="Message"></textarea>
                </div>

                <div>
                    <button
                        class="inline-flex items-center justify-center rounded-full border border-transparent bg-blue px-5 py-3 text-base font-medium text-white transition hover:bg-gold hover:text-blue focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 dark:bg-gold dark:text-blue dark:hover:bg-blue dark:hover:text-white dark:focus-visible:outline-primary-400"
                        type="submit"
                    >
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
