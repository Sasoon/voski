---
import ServicesData from './ServicesData.js';
import Button from '../../components/Button.astro';
const services = ServicesData.services;
---

<section class="py-12">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="-mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {
        services.map((item) => (
          <div
            class:list={[
              'relative flex flex-col gap-8 p-8',
              item.isFlagged && 'bg-primary-500/10 dark:bg-primary-400/10',
            ]}
          >
            <div class="flex-1">
              <a href={`/service/${item.name.toLowerCase().replace(/\s+/g, '-')}`}>
                <div class="relative transform overflow-hidden rounded-3xl transition duration-300 hover:scale-110">
                  <img src={item.thumbnail} alt={item.name} class="h-full w-full object-cover" />
                  <div class="absolute inset-0 rounded-3xl" />
                </div>
              </a>
              <h2 class="mb-4 mt-4 text-xl font-medium">{item.name}</h2>
              <p class="mt-6 text-primary-950/70 dark:text-primary-200/70">{item.description}</p>
            </div>

            <Button
              href={`/service/${item.name.toLowerCase().replace(/\s+/g, '-')}`}
              label="Learn more"
              variant="default"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
