---
import FaqCta from '../components/services/FaqCta.astro';
import Layout from '../layouts/Layout.astro';
import BookingForm from '../components/BookingForm.astro';
---

<Layout description={`Book a musician . Voski`} title={`Book a musician`}>
    <section class="py-12">
        <div class="mx-auto max-w-2xl px-4 text-center sm:px-6 lg:max-w-7xl lg:px-8">
            <div class="flex flex-col gap-4 sm:gap-6">
                <h1 class="text-4xl font-medium tracking-tight sm:text-5xl lg:text-6xl">
                    Book a musician
                </h1>
            </div>
        </div>
    </section>

    <section class="relative overflow-hidden px-4 py-20">
        <img
            src="https://ucarecdn.com/b2a87379-14ce-4636-ab82-7fbc6fc9554d/-/preview/1000x666/"
            alt="Musician performing at concert"
            class="absolute inset-0 z-0 h-full w-full object-cover brightness-50"
        />
    </section>
    <section class="mt-16 flex flex-col gap-8 px-4 sm:px-6 md:flex-row lg:px-8">
        <div class="flex-1">
            <div
                class="mb-16 max-w-3xl flex-col rounded-3xl bg-primary-500/10 px-6 py-8 first-letter:flex dark:bg-primary-400/10"
            >
                <div class="flex flex-col gap-4">
                    <strong
                        class="font-light max-w-3xl text-lg text-primary-950 dark:text-primary-200/70 sm:text-xl"
                    >
                        Book Us for Your Next Event!
                    </strong>

                    <p
                        class="font-light max-w-3xl text-lg text-primary-950 dark:text-primary-200/70 sm:text-xl"
                    >
                        Looking to add a touch of live music to your upcoming event? Our talented
                        musicians are ready to make your occasion unforgettable. Whether it's a
                        wedding, corporate event, or private gathering, we've got you covered.
                    </p>
                </div>
            </div>
            <img
                class="rounded-3xl"
                src="https://ucarecdn.com/3d857bae-ebf3-4102-aec1-f201f996430c/-/preview/666x1000/"
            />
        </div>
        <BookingForm />
    </section>
    <FaqCta />
</Layout>
