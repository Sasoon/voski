>
    <section class="py-12">
        <div class="mx-auto max-w-2xl px-4 text-center sm:px-6 lg:max-w-7xl lg:px-8">
            <div class="flex flex-col gap-4 sm:gap-6">
                <h1 class="text-4xl font-medium tracking-tight sm:text-5xl lg:text-6xl">Media</h1>
                <p
                    class="mx-auto text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl lg:w-1/2"
                >
                    Watch our performances, recitals, and student achievements.
                </p>
            </div>
        </div>
    </section>

    <!-- YouTube Videos Section -->
    <section class="py-12">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="mb-8 text-center text-3xl font-medium tracking-tight sm:text-4xl">
                YouTube Videos
            </h2>
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
                <!-- Video 1 -->
